<div class='posts'>
    {{#each posts}}
        <article class='card'>
            
                <h1>
                    <a href='/post/{{id}}'>{{title}}</a>
                </h1>
                <div>
                    Post by {{User.username}} on {{format_date createdAt}}
                </div>
                <div class='card-body'>
                    {{body}}
                </div>

        </article>
    {{/each}}
</div>